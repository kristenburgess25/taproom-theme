<script src="https://cdn.jsdelivr.net/npm/vue@2.6.10/dist/vue.js"></script>

<section class="faq">
<div class="container">
<div class="faq-outter">
<h2 class="section-heading">Frequently Asked Questions</h2>
</div>
<div id="vue-faq">
    <ul id="faq-container">
        <li v-for="item in items" :key="item.message">
            <faq-item v-bind:item="item"></faq-item>
        </li>
    </ul>
    
</div>
</div>
</section>

<script>
    const FAQ =  {
        props: ['item'],
        delimiters: ['${', '}'],
        template: '<div> <p @click="handleClick()"> ${ item.question } </p> <p v-show="selected"> ${ item.answer } </p> </div>',
        data: function() {
            return {
                selected: false,
            }
        },
        methods: {
            handleClick: function() {
                let selectedStatus = this.selected;
                this.selected = !selectedStatus;
            }
        }
    }

    const app = new Vue({
        el: '#vue-faq',
        data: {
            items: [
                { question: 'Is this a question?', answer: "It most certainly is" },
                { question: 'Is this also a question?', answer: "Bih, it might be!" }
            ]
        },
        delimiters: ['${', '}'],
        components: {'faq-item': FAQ}
    })
</script>


